        <label for="email">email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="your.email@example.com"
        />
      </div>

      <div class="form-group">
        <label for="message">message</label>
        <textarea
          id="message"
          name="message"
          required
          placeholder="your message..."
        ></textarea>
      </div>

